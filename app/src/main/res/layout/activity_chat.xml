<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ac_floating_cascade_of_parchments"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ac_drawer_summoner"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_add_blue"
                android:layout_marginStart="10dp"/>
            <EditText
                android:id="@+id/ac_conjuring_conduit_of_messages"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_shadow_curve_box_greybg"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_toEndOf="@id/ac_drawer_summoner"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textCapSentences"
                android:focusableInTouchMode="false"
                android:layout_gravity="center"
                android:hint="@string/type_something"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/ac_emitting_button_of_green_arrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_send_green"
                android:layout_marginEnd="15dp"/>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/progress_view"/>

</RelativeLayout>