<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_broadcasting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:elevation="4sp">

    <RelativeLayout
        android:id="@+id/cvb_parent_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Channel Picture-->
        <RelativeLayout
            android:id="@+id/cvb_fav_pic_profile_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/cvb_background_unread"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_circle_blue_lobby"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/cvb_picture_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:elevation="4dp"
                android:padding="3sp"
                android:src="@drawable/ic_launcher_round" />
        </RelativeLayout>

        <!--Channel Name-->
        <RelativeLayout
            android:id="@+id/cvb_channel_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvb_fav_pic_profile_container">

            <TextView
                android:id="@+id/cvb_channel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:text="@string/channel_name"
                android:textSize="18sp" />

        </RelativeLayout>

        <!--Broadcast access button-->
        <RelativeLayout
            android:id="@+id/cvb_broadcast_access_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvb_channel_name_container"
            android:layout_marginBottom="10sp">

            <Button
                android:id="@+id/cvb_view_now_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/gradient_eightchatblue"
                android:text="@string/view_now"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>