<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/halftransparent"
    tools:ignore="MissingPrefix">

    <!--Profile Picture View-->

    <LinearLayout
        android:id="@+id/toolbar_left_action_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp">
        <ImageView
            android:id="@+id/toolbar_leftoolbart_action"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>

    <!--Toolbar title-->
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Titl"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/toolbar_title_double_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/toolbar_title_double_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="asdfasdf"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/toolbar_title_double_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdfasdfasdfasdf"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/toolbar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="15dp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_marginBottom="3dp"/>

    <ImageView
        android:id="@+id/toolbar_right_picture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="15dp"
        android:visibility="gone" />



</android.support.v7.widget.Toolbar>