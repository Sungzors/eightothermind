<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/cvc_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="SAT 11:09 PM"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/cvc_message_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chatbubble_left"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/cvc_message_date">
        <TextView
            android:id="@+id/cvm_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:text="test"
            fontPath="fonts/Avenir-Medium-webfont.ttf"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cvm_profile_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="-38dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/cvc_message_bubble"/>




</RelativeLayout>