<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/cvc_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="SAT 11:09 PM"
        android:textSize="14sp"
        fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>

    <RelativeLayout
        android:id="@+id/cvc_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatbubble_right"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="15dp"
        android:paddingStart="30dp"
        android:paddingBottom="15dp"
        android:paddingEnd="30dp"
        android:layout_below="@id/cvc_message_date"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/cvc_message_pic_small"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/cvc_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="test"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/cvc_message_pic_small"
            fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>
        <LinearLayout
            android:id="@+id/cvc_message_pic_container_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/cvc_message"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/cvc_message_pic_container_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/cvc_message_pic_container_1"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/cvc_message_button_money_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvc_message"
            android:text="@string/accept"
            fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>
        <Button
            android:id="@+id/cvc_message_button_money_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/cvc_message_button_money_accept"
            android:layout_below="@id/cvc_message"
            android:text="@string/decline"
            fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>


    </RelativeLayout>


    <!--android:layout_marginTop="5dp"-->
    <!--android:layout_marginStart="45dp"-->
    <!--android:layout_marginEnd="55dp"-->
    <!--android:layout_marginBottom="5dp"-->

    <ImageView
        android:id="@+id/cvc_profile_pic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/cvc_message_date"/>




</RelativeLayout>