<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Friend Profile-->
        <ImageView
            android:id="@+id/cvf_poster_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:src="@drawable/addphoto" />

        <LinearLayout
            android:id="@+id/cvf_file_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvf_poster_pic"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cvf_file_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/share_file"
                android:scaleType="centerCrop"
                android:src="@drawable/drawer_file" />

            <TextView
                android:id="@+id/cvf_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:text="@string/file_name"
                android:textColor="@color/blue_color_picker"
                android:textSize="15sp"
                fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cvf_top_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cvf_file_container"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/cvf_poster_pic"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cvf_poster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/black"
                fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cvf_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                fontPath="fonts/AkzidenzGroteskBE-Regular.otf"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>