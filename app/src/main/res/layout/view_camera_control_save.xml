<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_gravity="start|bottom"
    android:orientation="horizontal"
    tools:background="@android:color/transparent"
    android:layout_marginBottom="10dp">

    <!--SAVE-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <!--Text-->
        <ImageView
            android:id="@+id/iv_camera_save"
            android:layout_width="25dp"
            android:layout_height="29dp"
            android:layout_gravity="start|center"
            android:layout_marginEnd="130dp"
            android:layout_marginStart="35dp"
            android:background="@color/transparent"
            android:contentDescription="@string/camera_save"
            android:src="@drawable/save_photo" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/save"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <!--CLEAR ALL-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clear_all_tv"
            android:layout_width="25dp"
            android:layout_height="29dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="@string/ic_clear_all"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/clear_all_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:text="@string/clear_all"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <!--UNDO-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/undo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="@string/ic_clear_all"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/undo_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/undo"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>


</FrameLayout>