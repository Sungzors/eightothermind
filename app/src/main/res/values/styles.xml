<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:background">@color/halftransparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="fontPath">fonts/avenir-light-webfont.ttf</item>-->
    </style>
    
    <style name="CardView.SettingCards">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardCornerRadius">3dp</item>
    </style>

    <!--Camera-->
    <style name="Camera" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
